<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/item_medication_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_medication_image"
                android:scaleType="fitCenter"
                android:padding="@dimen/padding_small"
                android:layout_width="@dimen/medication_picture_size"
                android:layout_height="@dimen/medication_picture_size"
                android:src="@drawable/pill_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_small"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_medication_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/textSizeBig" />

                <TextView
                    android:id="@+id/item_medication_dose_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/textSizeSmall" />

                <TextView
                    android:id="@+id/item_medication_dates_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/textSizeSmall" />

                <TextView
                    android:id="@+id/item_medication_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder"
                    android:textSize="@dimen/textSizeSmall" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_large"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_medication_time_remaining_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small_plus"
                android:text="@string/placeholder"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSizeMedium" />

            <ImageView
                android:id="@+id/item_medication_color"
                android:layout_width="@dimen/color_bullet_size"
                android:layout_height="@dimen/color_bullet_size"
                android:src="@drawable/bg_circle_white"
                android:tint="@color/colorPrimary" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>